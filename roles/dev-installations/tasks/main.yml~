---
- name: Installs nginx web server
  apt: pkg=nginx state=installed update_cache=true
  notify:
    - start nginx

- name: Upload file bar.txt
  copy: src=bar.txt dest=~/ mode=0644
  register: out_copy1

- name: Upload file bar.txt
  copy: src=foo.sh dest=~/ mode=0777
  register: out_copy2

